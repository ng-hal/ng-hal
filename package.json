  "private": true,
  "scripts": {
    "build": "yarn build:core && yarn build:demo",
    "build:common": "ng-packagr -p packages/common/ng-package.json",
    "build:http": "ng-packagr -p packages/http/ng-package.json",
    "build:demo": "ng build --target=production --aot",
    "test": "yarn test:lib && yarn test:demo:single",
    "test:demo": "ng test",
    "test:demo:single": "ng test --single-run",
    "test:lib": "karma start lib/karma.conf.js",
    "test:lib:dev": "karma start lib/karma.conf.js --no-single-run --log-level debug",
    "lint": "yarn lint:lib && yarn lint:demo",
    "lint:demo": "ng lint",
    "lint:lib": "tslint --config lib/tslint.json --project lib/tsconfig.lint.json",
    "ci": "yarn ci:build && yarn ci:test",
    "ci:build": "yarn build",
    "ci:test": "yarn test",
    "ci:lint": "yarn lint",
    "ci:publish": "yarn build:lib && node tools/publish/prepublish.js",
    "ci:validate": "node tools/validate-commit-msg/index.js",
    "e2e": "ng e2e",
    "ng": "ng",
    "start": "yarn build:lib && ng serve",
    "commitmsg": "validate-commit-msg",
    "release": "standard-version --prerelease pre --message 'release: cut v%s release'"
  }
}
