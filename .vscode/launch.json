{
  "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach to Chrome, with sourcemaps",
        "type": "chrome",
        "request": "attach",
        "url": "http://localhost:3000/*",
        "port": 9222,
        "sourceMaps": true,
        "webRoot": "${workspaceRoot}"
      },
      {
        "name": "Launch Chrome against localhost, with sourcemaps",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000/*",
        "runtimeArgs": [
          "--user-data-dir=${workspaceRoot}/.chrome",
          "--remote-debugging-port=9222"
        ],
        "sourceMaps": true,
        "webRoot": "${workspaceRoot}"
      }
  ]
}
